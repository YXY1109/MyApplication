<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="50pt"
    android:paddingVertical="20pt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="180pt"
            android:layout_height="160pt"
            android:background="@drawable/focus"
            android:focusable="true"
            android:padding="2pt"
            android:src="@mipmap/hotel_1" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="180pt"
            android:layout_height="160pt"
            android:layout_marginHorizontal="20pt"
            android:background="@drawable/focus"
            android:focusable="true"
            android:padding="2pt"
            android:src="@mipmap/hotel_2" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="180pt"
            android:layout_height="160pt"
            android:layout_marginHorizontal="20pt"
            android:background="@drawable/focus"
            android:focusable="true"
            android:padding="2pt"
            android:src="@mipmap/hotel_2" />


    </LinearLayout>

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

</LinearLayout>